{
  "compilerOptions": {
    "target": "es2017",                                 
    "module": "commonjs",                              
    "rootDir": "./src",     
     "moduleResolution": "node",                             
    "typeRoots": ["./types", "./node_modules/@types"],                                                  
    "outDir": "./dist",                                  
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                  
    "skipLibCheck": true                              
  },
    "include": ["src", "types"]
}
